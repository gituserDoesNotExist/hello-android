<resources>

    <style name="Theme.HelloAndroid" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorSecondary">@color/colorSecondary</item>
        <item name="android:textColorSecondary">@color/colorOnSecondary</item>

        <item name="colorError">@color/colorError</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="buttonStyle">@style/CKButton</item>
        <item name="imageButtonStyle">@style/CKButton</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.HelloAndroid.Toolbar" parent="Theme.HelloAndroid">
        <item name="actionMenuTextColor">@color/colorOnPrimary</item>
    </style>


    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="CKButton" parent="android:style/Widget.Button">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_margin">0dip</item>
        <item name="android:background">@color/colorSecondary</item>
    </style>


    <style name="editTextStyle">
        <item name="android:textColor">@color/edit_text_color</item>
    </style>

    <style name="styleTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/edit_text_box_border</item>
    </style>

    <style name="styleEditTextSmall">
        <item name="android:padding">8dip</item>
        <item name="android:textColor">@color/colorOnBackground</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="hintTextTextInputLayout" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>


</resources>
