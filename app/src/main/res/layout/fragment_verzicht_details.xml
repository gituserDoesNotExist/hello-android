<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="verzichtDetailsFragment"
                type="com.example.helloandroid.verzicht.view.VerzichtDetailsFragment" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".verzicht.view.VerzichtDetailsFragment">

        <TextView
                android:id="@+id/txt_edit_verzicht_sie_haben_bereits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sie haben bereits"
                android:textSize="@dimen/edit_verzicht_txt_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/txt_edit_verzicht_number_of_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{verzichtDetailsFragment.verzichtDTO.days}"
                android:textSize="@dimen/edit_verzicht_verzicht_info_size"
                app:layout_constraintBottom_toTopOf="@id/txt_edit_verzicht_tage_auf"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_edit_verzicht_sie_haben_bereits" />

        <TextView
                android:id="@+id/txt_edit_verzicht_tage_auf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tage auf"
                android:textSize="@dimen/edit_verzicht_txt_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_edit_verzicht_number_of_days" />

        <TextView
                android:id="@+id/txt_edit_verzicht_verzicht_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{verzichtDetailsFragment.verzichtDTO.name}"
                android:textSize="@dimen/edit_verzicht_verzicht_info_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_edit_verzicht_tage_auf" />

        <TextView
                android:id="@+id/txt_edit_verzicht_verzichtet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="verzichtet"
                android:textSize="@dimen/edit_verzicht_txt_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_edit_verzicht_verzicht_name" />

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="10dip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_edit_verzicht_verzichtet" />

        <Button
                android:id="@+id/btn_plus_one_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> verzichtDetailsFragment.increaseVerzichtDurationByOneDay()}"
                android:enabled="@{!verzichtDetailsFragment.verzichtDTO.daysIncreasedToday}"
                android:text="Add 1 day"
                android:padding="5dip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_edit_verzicht_verzichtet" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>