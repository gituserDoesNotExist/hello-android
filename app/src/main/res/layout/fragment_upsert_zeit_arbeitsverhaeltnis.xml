<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.example.helloandroid.HelloInputType" />

        <import type="com.example.helloandroid.view.LocalDateConverter" />

        <import type="com.example.helloandroid.view.BigDecimalConverter" />

        <variable
                name="viewModel"
                type="com.example.helloandroid.timerecording.view.UpsertZeitArbeitsverhaeltnisViewModel" />


        <variable
                name="upsertArbeitsverhaeltnisDetailsFragment"
                type="com.example.helloandroid.timerecording.view.UpsertZeitArbeitsverhaeltnisFragment" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip">


        <include
                android:id="@+id/metadaten"
                layout="@layout/arbeitsverhaeltnis_metadaten"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toTopOf="parent"
                bind:viewModel="@{viewModel}" />


        <LinearLayout
                android:id="@+id/title_and_date"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:weightSum="1"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/metadaten">

            <com.google.android.material.textfield.TextInputLayout
                    style="@style/Theme.HelloAndroid.TextInputLayout.OutlinedBox"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    app:layout_constraintEnd_toEndOf="@id/guideline_right"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintTop_toTopOf="parent">

                <AutoCompleteTextView
                        android:id="@+id/autocomplete_title"
                        style="@style/Theme.HelloAndroid.TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="@{viewModel.editable}"
                        android:hint="@string/title"
                        android:text="@{viewModel.arbeitsverhaeltnisForAnzeige.title}" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />

            <include
                    layout="@layout/hello_text_input"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    bind:clickListener="@{() -> upsertArbeitsverhaeltnisDetailsFragment.openDatePickerDialog()}"
                    bind:hintText="@{@string/datum}"
                    bind:inputText="@{LocalDateConverter.dateToString(viewModel.arbeitsverhaeltnisForAnzeige.datum)}"
                    bind:isEnabled="@{viewModel.editable}" />

        </LinearLayout>


        <LinearLayout
                android:id="@+id/layout_taetigkeit_and_arbeitszeit"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintBottom_toTopOf="@id/layout_leistungserbringer_und_nehmer"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/title_and_date">

            <include
                    layout="@layout/hello_text_input"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    bind:clickListener="@{(v) -> upsertArbeitsverhaeltnisDetailsFragment.openTaetigkeitListPopUp(v)}"
                    bind:hintText="@{@string/taetigkeit}"
                    bind:inputText="@{viewModel.arbeitsverhaeltnisForAnzeige.taetigkeit}"
                    bind:isEnabled="@{viewModel.editable}"
                    bind:isInvalid="@{viewModel.taetigkeitMissing}" />

            <Space
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />

            <include
                    layout="@layout/hello_text_input"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    bind:hintText="@{@string/dauer}"
                    bind:inputText="@={viewModel.arbeitsverhaeltnisForAnzeige.arbeitszeit}"
                    bind:inputType="@{HelloInputType.DECIMAL}"
                    bind:isEnabled="@{viewModel.editable}"
                    bind:isInvalid="@{viewModel.dauerMissing}" />


        </LinearLayout>


        <LinearLayout
                android:id="@+id/layout_leistungserbringer_und_nehmer"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintBottom_toTopOf="@id/layout_produktname_and_stueckzahl"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/layout_taetigkeit_and_arbeitszeit">


            <include
                    layout="@layout/hello_text_input"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    bind:clickListener="@{(v) -> upsertArbeitsverhaeltnisDetailsFragment.openLeistungsnehmerListPopUp(v)}"
                    bind:hintText="@{@string/label_edit_text_neue_zeiterfassung_leistungsnehmer}"
                    bind:inputText="@{viewModel.arbeitsverhaeltnisForAnzeige.leistungsnehmer}"
                    bind:isEnabled="@{viewModel.editable}" />

            <include
                    layout="@layout/hello_text_input"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    bind:clickListener="@{(v) -> upsertArbeitsverhaeltnisDetailsFragment.openLeistungserbringerListPopUp(v)}"
                    bind:hintText="@{@string/label_edit_text_neue_zeiterfassung_leistungserbringer}"
                    bind:inputText="@{viewModel.arbeitsverhaeltnisForAnzeige.leistungserbringer}"
                    bind:isEnabled="@{viewModel.editable}" />

        </LinearLayout>


        <LinearLayout
                android:id="@+id/layout_produktname_and_stueckzahl"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintBottom_toTopOf="@id/kommentar"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/layout_leistungserbringer_und_nehmer">


            <include
                    layout="@layout/hello_text_input"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    bind:clickListener="@{(v) -> upsertArbeitsverhaeltnisDetailsFragment.openFahrzeugListPopUp(v)}"
                    bind:hintText="@{@string/label_edit_text_neue_zeiterfassung_fahrzeug}"
                    bind:inputText="@{viewModel.arbeitsverhaeltnisForAnzeige.fahrzeug}"
                    bind:isEnabled="@{viewModel.editable}" />

            <include
                    layout="@layout/hello_text_input"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    bind:clickListener="@{(v) -> upsertArbeitsverhaeltnisDetailsFragment.openMaschineListPopUp(v)}"
                    bind:hintText="@{@string/label_edit_text_neue_zeiterfassung_maschine}"
                    bind:inputText="@{viewModel.arbeitsverhaeltnisForAnzeige.anbaugeraet}"
                    bind:isEnabled="@{viewModel.editable}" />


        </LinearLayout>


        <include
                android:id="@+id/kommentar"
                layout="@layout/hello_text_input"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:layout_constraintStart_toStartOf="@id/guideline_left"
                app:layout_constraintTop_toBottomOf="@id/layout_produktname_and_stueckzahl"
                bind:hintText="@{@string/label_edit_text_neue_zeiterfassung_kommentar}"
                bind:inputText="@={viewModel.arbeitsverhaeltnisForAnzeige.kommentar}"
                bind:isEnabled="@{viewModel.editable}" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dip"
                android:backgroundTint="@color/colorSecondary"
                android:onClick="@{()-> upsertArbeitsverhaeltnisDetailsFragment.addOrUpdate()}"
                android:src="@drawable/btn_confirm"
                app:borderWidth="0dip"
                app:fabSize="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline_right"
                app:visible="@{viewModel.editable}" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>