<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.example.helloandroid.view.LocalDateConverter" />

        <import type="com.example.helloandroid.view.BigDecimalConverter" />

        <variable
                name="arbeitsverhaeltnisErstellenDto"
                type="com.example.helloandroid.timerecording.view.ArbeitsverhaeltnisErstellenDTO" />

        <variable
                name="addArbeitsverhaeltnisDialog"
                type="com.example.helloandroid.timerecording.view.AddArbeitsverhaeltnisDialog" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="400dip"
            android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                    app:layout_constraintTop_toTopOf="parent">

                <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.55"
                        android:text="@string/label_edit_text_neue_zeiterfassung_datum"
                        android:textSize="20sp" />

                <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        >

                    <EditText
                            android:id="@+id/input_add_arbeitsverhaeltnis_datum"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:layout_weight="1"
                            android:text="@={LocalDateConverter.dateToString(arbeitsverhaeltnisErstellenDto.datumZeiterfassung)}" />

                    <ImageButton
                            android:id="@+id/btn_add_ausgabe_dialog_select_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dip"
                            android:onClick="@{() -> addArbeitsverhaeltnisDialog.openDatePickerDialog()}"
                            android:src="@drawable/date_picker_icon" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.55"
                        android:text="@string/label_edit_text_neue_zeiterfassung_anzahl_stunden"
                        android:textSize="20sp" />

                <EditText
                        android:id="@+id/input_add_arbeitsverhaeltnis_time"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="bottom"
                        android:inputType="numberDecimal"
                        android:text="@={BigDecimalConverter.bigDecimalToString(arbeitsverhaeltnisErstellenDto.dauer)}" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <TextView
                        android:id="@+id/textView3"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.55"
                        android:text="@string/label_edit_text_neue_zeiterfassung_kategorie"
                        android:textSize="20sp" />

                <EditText
                        android:id="@+id/input_add_arbeitsverhaeltnis_kategorie"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:focusableInTouchMode="false"
                        android:gravity="bottom"
                        android:onClick="@{(view) -> addArbeitsverhaeltnisDialog.openKategoriePopUp(view)}"
                        android:text="@={arbeitsverhaeltnisErstellenDto.kategorie}" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <TextView
                        android:id="@+id/textView4"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.55"
                        android:text="@string/label_edit_text_neue_zeiterfassung_leistungserbringer"
                        android:textSize="20sp" />

                <EditText
                        android:id="@+id/input_add_arbeitsverhaeltnis_leistungserbringer"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:focusableInTouchMode="false"
                        android:gravity="bottom"
                        android:onClick="@{(view) -> addArbeitsverhaeltnisDialog.openLeistungserbringerPopUp(view)}"
                        android:text="@={arbeitsverhaeltnisErstellenDto.leistungserbringer}" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

                <TextView
                        android:id="@+id/textView5"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.55"
                        android:text="@string/label_edit_text_neue_zeiterfassung_leistungsnehmer"
                        android:textSize="20sp" />

                <EditText
                        android:id="@+id/input_add_arbeitsverhaeltnis_leistungsnehmer"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:focusableInTouchMode="false"
                        android:gravity="bottom"
                        android:onClick="@{(view) -> addArbeitsverhaeltnisDialog.openLeistungsnehmerPopUp(view)}"
                        android:text="@={arbeitsverhaeltnisErstellenDto.leistungsnehmer}" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout5">


                <TextView
                        android:id="@+id/textView6"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.55"
                        android:text="@string/label_edit_text_neue_zeiterfassung_kommentar"
                        android:textSize="20sp" />

                <EditText
                        android:id="@+id/input_add_arbeitsverhaeltnis_kommentar"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="bottom"
                        android:text="@={arbeitsverhaeltnisErstellenDto.kommentar}" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip">

            <ImageButton
                    android:id="@+id/btn_eintrag_hinzufuegen"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> addArbeitsverhaeltnisDialog.addArbeitsverhaeltnisAndCloseDialog()}"
                    android:src="@drawable/btn_confirm"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@id/guideline_middle_left"
                    app:layout_constraintStart_toStartOf="@id/guideline_left"
                    app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.1" />

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_middle_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.4" />

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_middle_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.6" />

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.9" />

            <ImageButton
                    android:id="@+id/btn_ausgabe_hinzufuegen_abbrechen"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> addArbeitsverhaeltnisDialog.closeDialog()}"
                    android:src="@drawable/btn_cancel"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@id/guideline_right"
                    app:layout_constraintStart_toEndOf="@id/guideline_middle_right"
                    app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</layout>