<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".VerzichtUebersichtActivity">

    <TextView
            android:id="@+id/title_verzicht_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="@string/title_verzicht_activity"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="40dp"
            android:background="@color/colorPrimaryDark"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toTopOf="@+id/btn_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_verzicht_button" />

    <EditText
            android:id="@+id/input_new_verzicht_name"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_marginTop="24dp"
            android:hint="Name des neuen Verzichts"
            android:inputType="textPersonName"
            android:textSize="20dip"
            app:layout_constraintEnd_toStartOf="@+id/new_verzicht_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_verzicht_activity" />

    <ImageButton
            android:id="@+id/new_verzicht_button"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_gravity="bottom"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:background="@color/background"
            android:onClick="createNewVerzicht"
            android:src="@drawable/add_button"
            android:text="@string/label_btn_new_verzicht"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_verzicht_activity" />

    <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openMainActivity"
            android:src="@drawable/home_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>