<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        tools:context=".finances.view.PostenDetailsFragment">

    <TextView
            android:id="@+id/title_posten_details_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_posten_details_fragment"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/text_view_gesamtausgaben"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/text_view_gesamtausgaben"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_textview"
            android:gravity="center"
            android:text="3000.54 â‚¬"
            android:textAlignment="center"
            android:layout_marginBottom="15dip"
            android:layout_marginTop="15dip"
            app:layout_constraintTop_toBottomOf="@id/title_posten_details_fragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ausgaben_recycler_view" />


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ausgaben_recycler_view"
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:background="@color/colorYellowLight"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="@id/guideline_bottom_of_table"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline_top" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.24" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_bottom_of_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

    <Button
            android:id="@+id/btn_new_ausgabe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/neue_ausgabe_button"
            android:text=" Neue Ausgabe erfassen"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline_bottom_of_table" />


</androidx.constraintlayout.widget.ConstraintLayout>