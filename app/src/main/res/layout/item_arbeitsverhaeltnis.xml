<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:padding="4dip">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/item_arbeitsverhaeltnis_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="dsfsdfsdfsdf" />


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:orientation="horizontal"
            android:weightSum="1">


        <TextView
                android:id="@+id/item_arbeitsverhaeltnis_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                tools:text="20 Nov 2019" />


        <TextView
                android:id="@+id/item_arbeitsverhaeltnis_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                tools:text="43.2 Stunden" />

        <TextView
                android:id="@+id/item_arbeitsverhaeltnis_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dip"
                android:layout_weight="0.4"
                tools:text="egal" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <View
                android:layout_width="wrap_content"
                android:layout_height="2dip"
                android:layout_margin="10dip"
                android:background="@color/colorBackground" />

    </LinearLayout>

</LinearLayout>