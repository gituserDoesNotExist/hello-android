<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dip"
        android:weightSum="1">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="1">


        <TextView
                android:id="@+id/ausgabe_header_row_datum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Datum"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/ausgabe_header_rowdatum_wert"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="Wert"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/ausgabe_header_rowdatum_beschreibung"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Beschreibung"
                android:textStyle="bold" />

        <ImageButton
                android:id="@+id/btn_open_dropdown_sort_ausgaben"
                android:layout_width="wrap_content"
                android:layout_gravity="top"
                android:layout_height="wrap_content"
                android:src="@drawable/sort_icon_24x24" />

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginTop="5dip"
            android:background="@color/black" />


</LinearLayout>
