<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical"
        tools:context=".finances.AusgabenUebersichtFragment">

    <TextView
            android:id="@+id/txt_finances_money_spend_so_far"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_finances_activity_total_amount"
            android:textSize="50sp"
            app:layout_constraintBottom_toTopOf="@id/txt_finances_total_amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/txt_finances_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="80sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txt_finances_euro"
            app:layout_constraintTop_toBottomOf="@id/txt_finances_money_spend_so_far" />

    <TextView
            android:id="@+id/txt_finances_euro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Euro"
            android:textSize="80sp"
            app:layout_constraintStart_toEndOf="@id/txt_finances_total_amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_finances_money_spend_so_far" />

</androidx.constraintlayout.widget.ConstraintLayout>