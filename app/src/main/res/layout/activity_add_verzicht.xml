<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddVerzichtActivity"
        tools:showIn="@layout/activity_add_verzicht">

    <TextView
            android:id="@+id/title_add_verzicht_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90px"
            android:text="@string/title_add_verzicht_activity"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/description_add_verzicht_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/description_add_verzicht_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_add_verzicht_name"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:id="@+id/input_verzicht_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            />

    <Button
            android:id="@+id/button_save_verzicht"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_btn_save_verzicht"
            android:onClick="saveVerzicht"
            tools:layout_editor_absoluteX="159dp"
            tools:layout_editor_absoluteY="571dp"
            app:layout_constraintTop_toBottomOf="@id/input_verzicht_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


</androidx.constraintlayout.widget.ConstraintLayout>